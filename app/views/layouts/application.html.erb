<!DOCTYPE html>
<html>
  <head>
    <title>Ratebeer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navibar">
    <%= link_to 'breweries', breweries_path %>
    <%= link_to 'beers', beers_path %>
    <%= link_to 'ratings', ratings_path %>
    <%= link_to 'users', users_path %>
    |
    <% if current_user %>
      <%= link_to current_user.to_s, user_path(current_user) %>
      <%= link_to 'rate a beer', new_rating_path %>
      <%= link_to 'signout', signout_path, method: :delete %>        
    <% else %>
      <%= link_to 'signin', signin_path  %>  
      <%= link_to 'signup', signup_path  %> 
    <% end %>
    
    </div>
  
    <% if session[:last_rating].nil? %>
      <p>no ratings given</p>
    <% else %>
      <p>previous rating: <%= session[:last_rating] %></p>
    <% end %>

    <% if current_user %>
      <p><%= current_user.username %> signed in</p>
    <% end %>

    <%= yield %>
  </body>
</html>
