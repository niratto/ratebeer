<p id="notice"><%= notice %></p>

<p>
  <h1>
  <%= @user.username %>
  </h1>
</p>
<% if @user.ratings.empty? %>
 User has not yet given any ratings!
<% else %>
  <%= @user.average_rating("User has given ") %>
<% end %>
<h1>Ratings</h1>
<ul>
  <% @user.ratings.each do |rating| %>
    <li>
      <%= rating %>
      <% if @user == current_user %>
          <%= link_to 'delete', rating, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </li>
  <% end %>
</ul>

<br /><br />
<% if @user == current_user %>
  <%= link_to 'Edit', edit_user_path(@user) %> |
  <%= link_to 'Destroy', signout_and_destroy_path, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
<%= link_to 'Back', users_path %>
