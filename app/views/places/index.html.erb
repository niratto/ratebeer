<p id="notice"><%= notice %></p>

<%= form_tag places_path do %>
  city <%= text_field_tag :city, params[:city] %>
  <%= submit_tag "Search" %>
<% end %>

<% if @weathers %>
  
  <table>
    <% @weathers.each do |w| %>
      <tr>
      <td><img src="http:<%= w.current['condition']['icon'] %>"></td>
      <td><%= w.current['temp_c'] %> &#8451;</td>
      </tr>
      <tr>
      <td colspan="2"><i>Weather in <%= w.location['name'] %> @ <%= w.location['localtime'] %></i></td>
      </tr>
      <tr><td colspan="2"><hr /></td></tr>
    <% end %>
  </table>
<% end %>

<% if @places %>
  <table>
    <thead>
      <% Place.rendered_fields1.each do |field| %>
        <th><%= field %></th>
      <% end %>
    </thead>
    <% @places.each do |place| %>
      <tr>
      <td><%= link_to place.name, place_path(place.id) %></td>
      <td><%= place.overall %></td>
      </tr>
    <% end %>
  </table>
<% end %>